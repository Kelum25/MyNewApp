<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    tools:context="com.sdgp.kelum23.myserveyapp.SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to FieldServeyApp"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:lineSpacingExtra="8sp" android:textColor="@color/colorAccent"
        android:textStyle="normal|bold" android:textAllCaps="false" android:textAlignment="center"
        android:layout_alignParentStart="true" android:id="@+id/textViewHeadline"
        tools:ignore="HardcodedText"
        android:layout_alignParentLeft="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="90dp" android:id="@+id/editTextEmail"
        android:hint="Enter Your Email Address" android:singleLine="true" android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/textViewName" android:layout_alignParentStart="true"
        tools:ignore="Deprecated,HardcodedText,UnknownId"
        android:layout_alignParentLeft="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="63dp" android:id="@+id/editTextPassword" android:hint="Enter Your Password"
        android:layout_below="@+id/editTextEmail" android:layout_alignParentStart="true"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:layout_alignParentLeft="true" />
    <Button
        android:text="Sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@+id/editTextPassword"
        android:layout_alignParentStart="true" android:layout_marginTop="65dp" android:id="@+id/buttonSignup"
        android:background="@android:color/holo_red_light" android:fontFamily="sans-serif"
        android:textSize="24sp" android:textStyle="normal|bold"
        tools:ignore="HardcodedText"
        android:layout_alignParentLeft="true" />
    <Button
        android:text="Sign in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" android:id="@+id/buttonSignin"
        android:textStyle="normal|bold" android:textSize="24sp" android:background="@color/colorPrimary"
        android:layout_below="@+id/textViewMessage" android:layout_alignParentStart="true"
        tools:ignore="HardcodedText"
        android:layout_alignParentLeft="true" />
    <TextView
        android:text="Already have an account?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:id="@+id/textViewMessage"
        android:textStyle="normal|bold" android:textAlignment="center" android:layout_below="@+id/buttonSignup"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText"
        android:layout_alignParentLeft="true" />






</RelativeLayout>
