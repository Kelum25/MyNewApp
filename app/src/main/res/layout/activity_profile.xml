<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdgp.kelum23.myserveyapp.ProfileActivity">

    <TextView
        android:id="@+id/textViewSigninUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText" />
    <Button
        android:text="sign out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSignout" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_light"
        tools:ignore="HardcodedText"
        android:layout_alignParentRight="true" />


    <Button
        android:text="Go Question 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp" android:id="@+id/buttonGoQuestion"
        android:background="@android:color/holo_blue_bright" android:textStyle="normal|bold"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Survey Questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp" android:id="@+id/textViewTitle" android:layout_below="@+id/buttonSignout"
        android:layout_alignParentStart="true" android:textStyle="normal|bold" android:textSize="24sp"
        android:textAlignment="center" android:textColor="@color/colorAccent"
        tools:ignore="HardcodedText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:text="1.Preliminary Information of location of household servey." android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark" android:textSize="18sp" android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGoQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

</RelativeLayout>