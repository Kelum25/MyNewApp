<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdgp.kelum23.myserveyapp.ViewActivity">

    <TextView
        android:id="@+id/textViewSigninUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="sign out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSignout" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_light"
        tools:ignore="HardcodedText"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/question_one_view_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal|bold" android:textSize="24sp"
        android:textAlignment="center" android:textColor="@color/colorAccent"

        android:layout_below="@+id/buttonSignout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listViewQsnOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonSignout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp" />

    <Button
        android:id="@+id/buttonGoBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:text="@string/Back" />

</RelativeLayout>
